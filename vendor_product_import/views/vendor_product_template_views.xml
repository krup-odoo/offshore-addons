<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vendor_product_template_view_tree" model="ir.ui.view">
        <field name="name">vendor_product_template.tree</field>
        <field name="model">vendor.product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <record id="vendor_product_template_view_form" model="ir.ui.view">
        <field name="name">vendor_product_template.form</field>
        <field name="model">vendor.product.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group><h1><field name="name" class="oe_inline"/></h1></group>
                    <group><field name="vendor_id"/></group>
                    <notebook>
                        <page string="Vendor Template Format">
                            <group>
                                <field name="odoo_field_ids">
                                    <tree editable="bottom">
                                        <field name="file_header"/>
                                        <field name="odoo_field_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="vendor_product_template_action" model="ir.actions.act_window">
        <field name="name">Vendor Product</field>
        <field name="res_model">vendor.product.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
