<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vendor_product_import_view_tree" model="ir.ui.view">
        <field name="name">vendor_product_import.tree</field>
        <field name="model">vendor.product.import</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="vendor_id"/>
            </tree>
        </field>
    </record>
    
    <record id="vendor_product_import_view_form" model="ir.ui.view">
        <field name="name">vendor_product_import.form</field>
        <field name="model">vendor.product.import</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage" widget="statusbar" statusbar_visible="pending,processed,error"/>
                    <button name="action_manual_process" class="oe_highlight" type="object" string="Manual Process"/>
                </header>
                <sheet>
                    <group><h1><field name="sequence" class="oe_inline"/></h1></group>
                    <group>
                        <group><field name="vendor_id"/></group>
                        <group><field name="vendor_template_id" options="{'no_create': true, 'no_open': true}"/></group>
                    </group>
                    <group>
                        <group><field name="file" filename="file_name"/>
                            <field name="file_name" invisible="1"/></group>
                        <group><field name="date"/></group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="vendor_product_import_action" model="ir.actions.act_window">
        <field name="name">Vendor Product Import</field>
        <field name="res_model">vendor.product.import</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
